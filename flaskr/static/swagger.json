    "tags": [
      {
        "name": "Application",
        "description": "Everything about OpenApi TAN ",
        "externalDocs": {
          "description": "Find out more",
          "url": "https://open.tan.fr/doc/openapi"
        }
      },
      {
        "name": "Autres",
        "description": "Je ne sais pas mais il faut encore automatiser ca"
      }
    ],
    
    "paths": {
        "/": {
          "get": {
            "tags": ["Application"],
            "summary": "Page Home",
            "description": "Hello world !",
            "responses": {
              "200": {
                "description": "Successful response",
                "content": {
                  "text/plain": {
                    "example": "Hello, World!"
                  }
                }
              }
            }
          }
        },
        "/find_arret/{latitude}/{longitude}": {
          "get": {
            "tags": ["Application"],
            "summary": "Find closest stop",
            "description": "Retrieve stops near a specific latitude and longitude",
            "parameters": [
              {
                "name": "latitude",
                "in": "path",
                "required": true,
                "description": "Latitude coordinate",
                "schema": {
                  "type": "number"
                }
              },
              {
                "name": "longitude",
                "in": "path",
                "required": true,
                "description": "Longitude coordinate",
                "schema": {
                  "type": "number"
                }
              }
            ],
            "responses": {
              "200": {
                "description": "Successful response",
                "content": {
                  "application/json": {
                    "example": {
                      "stops": [
                        {"stop_id": 1, "stop_name": "Stop 1"},
                        {"stop_id": 2, "stop_name": "Stop 2"}
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "/arrets": {
          "get": {
            "tags": ["Application"],
            "summary": "Get all stops",
            "description": "Retrieve a list of all stops",
            "responses": {
              "200": {
                "description": "Successful response",
                "content": {
                  "application/json": {
                    "example": {
                      "stops": [
                        {"stop_id": 1, "stop_name": "Stop 1"},
                        {"stop_id": 2, "stop_name": "Stop 2"}
                      ]
                    }
                  }
                }
              }
            }
          }
        }
    },
    "securitySchemes": {
        "api_key": {
            "type": "apiKey",
            "name": "api_key",
            "in": "header"
        }
    }
}